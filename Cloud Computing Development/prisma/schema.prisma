// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql" //prod
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product_catalog {
  id                String        @id @default(cuid())
  name              String        @unique
  category          String
  description       String
  photo_url         String?
  national_price    Int
  prediction_price  Int

  //foreign key
  product_item      Product_item[]
}

model Users {
  id                String          @id @default(cuid())
  email             String          @unique
  name              String
  password          String
  type              String
  photo_url         String?
  refreshToken      String?

  producers         Product_item[]      @relation("productProducers")
  distributors      Product_item[]      @relation("productDistributors")
  sellers           Product_item[]      @relation("productSellers")
}


model Product_item {
  id                    String          @id @default(cuid())
  productcatalog_id     String
  producer_id           String
  distributor_id        String
  seller_id             String
  harvest_date          DateTime?
  harvest_place         String?


  productsCatalog           Product_catalog   @relation(fields: [productcatalog_id], references: [id])
  producers                 Users             @relation("productProducers", fields: [producer_id], references: [id])
  distributors              Users             @relation("productDistributors", fields: [distributor_id], references: [id])
  sellers                   Users             @relation("productSellers", fields: [seller_id], references: [id])

  sell_prices               Sell_prices[]
}


model Sell_prices {
  id                String              @id @default(cuid())
  product_id        String
  updat_date        DateTime
  price             Int

  products          Product_item        @relation(fields: [product_id], references: [id])
}
